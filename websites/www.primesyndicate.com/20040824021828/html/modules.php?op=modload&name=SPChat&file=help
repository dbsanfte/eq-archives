<A NAME="format">
<TABLE BORDER="0" CELLPADDING="1" CELLSPACING="0" WIDTH="100%" VALIGN="TOP">
  <TR><TD BGCOLOR="#000000">
  <TABLE BORDER="0" CELLPADDING="4" CELLSPACING="1" WIDTH="100%">
    <TR BGCOLOR="#C0C0C0" ALIGN="LEFT" VALIGN="MIDDLE">
      <TD COLSPAN="5" ALIGN="CENTER"><FONT CLASS="normal"><STRONG>Supported Text styles</STRONG></FONT></TD>
    </TR>
    <TR BGCOLOR="lightblue" VALIGN="MIDDLE">
      <TD ALIGN="LEFT"><FONT CLASS="normal"><STRONG>Entry</STRONG></FONT></TD>
      <TD ALIGN="LEFT"><FONT CLASS="normal"><STRONG>Text appearance</STRONG></FONT></TD>
    </TR>
    <TR BGCOLOR="#FFFFFF">
      <TD ALIGN="left" nowrap ><FONT class="normal">:b: <i>Your Text </i>  :b:</FONT></TD>
      <TD ALIGN="left"><FONT class="normal">Sent text is displayed <b>bold</b></i></FONT></TD>
    </TR>
    <TR BGCOLOR="#FFFFFF">
      <TD ALIGN="left"><FONT class="normal">:i: <i>Your Text </i> :i:</i></FONT></TD>
      <TD ALIGN="left"><FONT class="normal">Sent text is displayed <i>italic</i></i></FONT></TD>
    </TR>
    <TR BGCOLOR="#FFFFFF">
      <TD ALIGN="left"><FONT class="normal">:u: <i>Your Text </i> :u:</i></FONT></TD>
      <TD ALIGN="left"><FONT class="normal">Sent text is displayed <u>underlined</u></i></FONT></TD>
    </TR>
  </TABLE>
  </TD></TR>
</TABLE>
