	    <td  bgcolor="dedede"  valign="top" class="msg" width="100%" >
         
          Final product, without pointers <br>   <br>  /*********************************************************/ <br>  /**LIB****************************************************/ <br>  #include &lt;stdio.h&gt; <br>  #include &lt;string.h&gt; <br>  #include &lt;ctype.h&gt; <br>   <br>  #define MAXLINE 1000 <br>  /*********************************************************/ <br>   <br>   <br>  /*********************************************************/ <br>  /**Function Prototipes************************************/ <br>  char bitstring[8*sizeof(int)+1];&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; /* Sets the array to the size of int * 8 + 1 */ <br>  char hexstring[2*sizeof(int)+1];&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; /* Sets the array to the size of int * 2 + 1 */ <br>  void itob(char bitstring[], const int n);&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; /* Dec to Binary conversion function&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;*/ <br>  void btox(char hexstring[], const unsigned char bitstring[]);&nbsp;&nbsp;&nbsp; /* Binary to hex function&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;*/ <br>  static char hex[16] = &quot;0123456789ABCDE&quot;;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; /* Hex list for conversion&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; */ <br>  int bitcount(int n);&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; /* The bitcounter function for bitstring&nbsp;&nbsp;&nbsp;&nbsp; */ <br>  /*********************************************************/ <br>   <br>   <br>  /*********************************************************/ <br>  /**MAIN FUNCTION******************************************/ <br>   <br>  main() <br>  &nbsp;&nbsp; { <br>   <br>  &nbsp;&nbsp;&nbsp; int n = 0; <br>  &nbsp;&nbsp;&nbsp; int i; <br>   <br>  &nbsp;&nbsp;&nbsp; printf(&quot;INPUT\tBITSTRING\t\t\t\tHEXSTRING\t BITCOUNT\n&quot;);&nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;  <br>   <br>  &nbsp;&nbsp; while (scanf(&quot;%d&quot;, &amp;n) == 1)&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp; /* Calls the scanf function, then checks to see if the input length is = to 1*/ <br>  &nbsp;&nbsp;&nbsp; {&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  <br>   <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; printf(&quot;%d&quot;, n); <br>   <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; itob(bitstring, n);&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; /* Dec to Binary conversion function; using the int 'c' as its dec&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; */ <br>   <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; printf(&quot;\t&quot;); <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; for (i = 0; i &lt; 32; i++) <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; printf(&quot;%d&quot;, bitstring<i>); <br>   <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; btox(hexstring, bitstring);&nbsp; /* This function will convert the bits aquired from itob to hex format&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; */ <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; printf(&quot;\t%s\t %d\n&quot;, hexstring, bitcount(n)); <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp; &nbsp;&nbsp;&nbsp; } <br>   <br>   <br>  &nbsp;&nbsp; printf(&quot;\n&quot;); <br>   <br>  return 0; <br>  &nbsp;&nbsp; } <br>   <br>  /*********************************************************/ <br>  /**Conversion function: dec to binary*********************/ <br>  void itob(char bitstring[], const int n) <br>  &nbsp;&nbsp; { <br>   <br>  &nbsp;&nbsp; int count = 31;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp; int mask = 1 &lt;&lt; (count); <br>  &nbsp;&nbsp; int t = 0; <br>  &nbsp;&nbsp; int i; <br>  &nbsp; <br>  &nbsp;&nbsp; t = n; <br>  &nbsp; <br>  &nbsp;&nbsp; for (i = 0; i &lt;= count; i++) <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; { <br>   <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; bitstring<i> = ((t &amp; mask) ? 1 : 0); /* Copies the bits in the array bitstring for later conversions&nbsp; */ <br>  &nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; t = t &lt;&lt; 1; <br>  &nbsp;&nbsp;&nbsp; &nbsp;  <br>  &nbsp;&nbsp;&nbsp; &nbsp; } <br>   <br>  &nbsp;&nbsp; i++; <br>  &nbsp;&nbsp; bitstring<i> = '\0'; <br>  } <br>  /*********************************************************/ <br>   <br>   <br>  /*********************************************************/ <br>  /**Conversion function: binary to hex*********************/ <br>  &nbsp;void btox(char hexstring[], const unsigned char bitstring[]) <br>  { <br>   <br>  &nbsp; int count = 32; <br>  &nbsp; int n1, n2; <br>  &nbsp; unsigned char ch; <br>   <br>  &nbsp; for (n1 = 0, n2 = 0; n1 &lt; count; n1+=8) <br>  &nbsp;&nbsp;&nbsp; { <br>   <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; /* first nibble */ <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ch = ((((bitstring[n1] &lt;&lt; 1) + bitstring[n1+1] &lt;&lt; 1) + bitstring[n1+2] &lt;&lt; 1) + bitstring[n1+3]); <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; if (ch &lt;= 0x09) <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; hexstring[n2++] = ch + '0'; <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; else <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; hexstring[n2++] = ch - 10 + 'A'; <br>   <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; /* second nibble */ <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ch = ((((bitstring[n1+4] &lt;&lt; 1) + bitstring[n1+5] &lt;&lt; 1) + bitstring[n1+6] &lt;&lt; 1) + bitstring[n1+7]); <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; if (ch &lt;= 0x09) <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; hexstring[n2++] = ch + '0'; <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; else <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; hexstring[n2++] = ch - 10 + 'A'; <br>   <br>  &nbsp;&nbsp;&nbsp; } <br>   <br>  n2++; <br>  hexstring[n2]='\0'; <br>  } <br>  /*********************************************************/ <br>   <br>   <br>  /*********************************************************/ <br>  /**Bit counter********************************************/ <br>  int bitcount(int n) <br>  &nbsp; { <br>   <br>  &nbsp;&nbsp; char bitstring[8*sizeof(int)+1]; <br>  &nbsp;&nbsp; int count = 31;&nbsp;&nbsp;  <br>  &nbsp;&nbsp; int bitcounter = 0;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp; int mask = 1 &lt;&lt; (count); <br>  &nbsp;&nbsp; int t = 0; <br>  &nbsp;&nbsp; int i; <br>  &nbsp; <br>  &nbsp;&nbsp; t = n; <br>  &nbsp; <br>  &nbsp;&nbsp; for (i = 0; i &lt;= count; i++) <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; { <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp;&nbsp; &nbsp; bitstring<i> = ((t &amp; mask) ? 1 : 0); /* Copies the bits in the array bitstring for later conversions*/ <br>  &nbsp;&nbsp;&nbsp;  <br>  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; t = t &lt;&lt; 1; <br>   <br>  &nbsp;&nbsp;&nbsp; &nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; if (bitstring<i> == 1) <br>  &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; bitcounter++; <br>  &nbsp;&nbsp;&nbsp; &nbsp; } <br>   <br>  &nbsp;&nbsp; i++; <br>  &nbsp;&nbsp; bitstring<i> = '\0'; <br>   <br>  &nbsp; return bitcounter; <br>  &nbsp; } <br>  /*********************************************************/ 
          
		  <span class="info">
          					
			</span>
		  <br><br>_____________________________<br><br><a href="http://www.magelo.com/eq_view_profile.html?num=429872" target="_blank">My Gear</a> 
         
