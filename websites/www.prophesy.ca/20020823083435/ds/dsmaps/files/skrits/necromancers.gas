//This is the base teplate for an evil NPC that casts spells at you. There are male and female versions.
//Template modified from farmboy, farmgirl, and swamp witch by Mike Ryan of Dungeoneer's Haven - www.dungeonsiegemaps.cjb.net
//Congradulations to GPG for making a game that incorporates true object oriented programming

[t:template,n:base_necromancer_male] //this is the base template for the male necromancer
{
	category_name = "1W_evil_a"; //category it shows up in actors, evil
	doc = "Necromancer male base template."; //documentation
	specializes = actor_evil; //what kind of actor is it
	[aspect]
	{
		model = m_c_gah_fb_pos_a1; //mesh used to represent the character
		[voice]
		{
			[die]			{ priority = high; * = s_e_die_male; } //sounds used
		}
	}
	[body]
	{
		armor_version = gah_fb;
		avg_move_velocity = 4.500000; //speed that this actor moves at
		initial_chore = chore_fidget; //what this actor is doing when it is first created
		[bone_translator] //bone configuration, DO NOT MODIFY
		{
			body_anterior = bip01_head;
			body_mid = bip01_spine2;
			body_posterior = bip01_pelvis;
			kill_bone = bip01_spine2;
			shield_bone = shield_grip;
			weapon_bone = weapon_grip;
		}
		[chore_dictionary] //what can this actor do aminations-wise, DO NOT MODIFY
		{
			chore_prefix = a_c_gah_fb_fs;
			[chore_attack]
			{
				chore_stances = 0,1,2,3,4,5,6,7,8;
				skrit = select_attack;
				[anim_files]
				{
					0mid = at;
					high = at-02;
					loww = at-03;
					extr = at-04;
					qffg = dff;
				}
		 	  	[anim_durations]
				{
					fs0 = 1.250;
					fs1 = 0.830;
					fs2 = 0.830;
					fs3 = 1.250;
					fs4 = 1.250;
					fs5 = 1.250;
					fs6 = 1.000;
					fs7 = 0.125;
					fs8 = 1.000;
				}
			}
			[chore_default]
			{
				chore_stances = 0,1,2,3,4,5,6,7,8;
				skrit = simple_loop;
				[anim_files] { 00=dff; }
			}
			[chore_die]
			{
				chore_stances = 0,1,2,3,4,5,6,7,8;
				skrit = select_transition;
				[anim_files] { 00=di; }
			}
			[chore_fidget]
			{
				chore_stances = 0,1,2,3,4,5,6,7,8;
				skrit = select_fidget;
				[anim_files]
				{
					00 = dff;
					01 = dff-02;
				}
			}
			[chore_magic]
			{
				chore_stances = 0,5;
				skrit = select_attack;
				[anim_files]
				{
					00 = mg;
					01 = mg-02;
				}
			}
			[chore_misc]
			{
				chore_stances = ignore;
				skrit = select_transition;
				[anim_files]
				{
					drnk = a_c_gah_fb_fs1_dk;
					gtup = a_c_gah_fb_fs0_up;
					look = a_c_gah_fb_fs0_dsf;
					wyme = a_c_gah_fb_fs0_dsf-02;
					frtd = a_c_gah_fb_fs0_dsf-03;
					talk = a_c_gah_fb_fs0_dsf-04;
					bed1 = a_c_gah_fb_fs0_dsf-05;
					bed2 = a_c_gah_fb_fs0_dsf-06;
					bed3 = a_c_gah_fb_fs0_dsf-07;
					mrik = a_c_gah_fb_fs0_dsf-08;
					sit1 = a_c_gah_fb_fs0_dsf-09;
					sit2 = a_c_gah_fb_fs0_dsf-10;
					bed4 = a_c_gah_fb_fs0_dsf-11;
					bed5 = a_c_gah_fb_fs0_dsf-12;
					froz = a_c_gah_fb_fs0_dsf-16;
					andi = a_c_gah_fb_fs0_dsf-17;
					lsn2 = a_c_gah_fb_fs0_dsf-18;
					knee = a_c_gah_fb_fs1_dsf-03;
					lstn = a_c_gah_fb_fs1_dsf-04;
					lblg = a_c_gah_fb_fs2_dsf-02;
					hoe1 = a_c_gah_fb_fs5_dsf-02;
				}
			}
			[chore_walk]
			{
				chore_stances = 0,1,2,3,4,5,6,7,8;
				skrit = select_walk;
				[anim_files] { 05=rl; }
			}
		}
	}
	[mind] //how this actor reacts to a situation
	{
		jat_cast 						= world\ai\jobs\common\job_cast.skrit
			?rand_spell					= true
		jat_die 						= world\ai\jobs\common\job_die_fade.skrit;


		actor_weapon_preference			= WP_MAGIC; //weapon preference
		actor_auto_switches_to_magic	= true;
		actor_auto_switches_to_karate	= false;
		actor_auto_switches_to_melee	= false;

		melee_engage_range				= 2;
		personal_space_range			= 0.7;
		on_enemy_entered_ocz_attack		= true;
		ranged_engage_range				= 13.0;
		sight_range						= 13.0;
	}
}
