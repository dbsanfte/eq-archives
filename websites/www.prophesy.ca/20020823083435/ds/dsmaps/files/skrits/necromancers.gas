[t:template,n:necromancer_male_base]
{
	category_name = "1W_evil_a";
	doc = "Necromancer Male";
	specializes = base_necromancer_male;
	[actor]
	{
		[skills] //what skill level this actor has
		{
			strength =  8, 0;
			intelligence =  18, 0;
			dexterity =  9, 0;
			combat_magic =  20,  0;
		}
	}
	[aspect] //life, mana, and experience rewarded to player when killed
	{
		experience_value = 1691;
		life = 210;
		max_life = 210;
		mana = 100000;
		max_mana = 100000;

		[textures] //textures used by this actor
		{
			0 = b_c_gah_fb_skin_05; //head skin
			1 = b_c_pos_a1_004; //body skin
		}
	}
	[attack] //melee damage, since this is a spellcaster these values are invalid
	{
		attack_range = 0.5;
		damage_max = 100;
		damage_min = 95;
	}
	[common] { screen_name="Necromancer Male"; } //name dipslayed upon mouseover
	[generator_in_object] //when killed, this actor has a skeleton that flies up into the air, ala swamp witch
	{
		child_template_name = swamp_switch_skeleton;
		spawn_event = WE_KILLED;
		spawn_chance = 1.0;
	}

    [defend] { defense=125; } //actor's defence
	[inventory] //what this actor is carrying
	{
		[pcontent] //chance to spawn a magical item
		{
			[oneof*]
			{
				chance = 0.2;
				il_main = #*/60-73;
				il_main = #armor/32-160;
                il_main = #body,ro/102-160;
            }
            [oneof*] //chance to spawn a rare item
			{
	        	chance = 0.004;
	            il_main = #weapon/-rare(1)/65-78;
	            il_main = #armor/-rare(1)/122-241;
                il_main = #*/-rare(1)/65-78;
            }
			[oneof*] //chance to spawn a unique item
			{
            	chance = 0.002;
	            il_main = #weapon/-unique(2)/65-78;
	            il_main = #armor/-unique(2)/122-241;
                il_main = #*/-unique(2)/65-78;
            }
		}
		selected_active_location = il_active_primary_spell; //active attack slot upon creation of this actor
		[other]
		{
			il_active_primary_spell=spell_fireskull; //spell 1
			il_spell_1=spell_firespray; //spell 2

//can add more spells, such as il_spell2=spell_fireball

		}
	}
	[mind] //what this actor does
	{
		jat_fidget						= world\ai\jobs\common\job_fidget.skrit
			?social							= 0.35
			&meander						= false
			&still							= false;
		jat_cast 						= world\ai\jobs\common\job_cast.skrit
			?rand_spell					= true
			&spell_chances				= "0.5,                  0.5" //chance to cast the spells below
			&spells						= "spell_fireskull, spell_firespray"; //spells this actor can use

        on_enemy_entered_ocz_flee 	= false;
		on_enemy_entered_ocz_attack = true;
		on_enemy_entered_icz_flee 	= true;
		on_enemy_entered_icz_attack = false;
		flee_count 					= 1;
	}
}
[t:template,n:necromancer_male] //template used by SE to add to game world
{
	category_name = "1W_evil_a";
	doc = "Necromancer Male";
	specializes = necromancer_male_base;
}
