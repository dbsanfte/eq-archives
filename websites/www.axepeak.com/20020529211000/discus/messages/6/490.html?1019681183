function initpage () {
  window.defaultStatus = "Axepeaks Ale House: The Flyin Goose: Dinner wit Diamond and Storm . . . ."
  if (document.userpass) {
    if (document.userpass.username) {
      document.userpass.username.value = readcookie("user")
