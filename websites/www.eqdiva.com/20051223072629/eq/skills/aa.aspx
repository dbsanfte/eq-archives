<TR>
											<TD width="21">
												<P align="center">55</P>
											</TD>
											<TD width="81">
												<P align="center">Natural Durability</P>
											</TD>
											<TD width="48">
												<P align="center">2/4/6</P>
											</TD>
											<TD width="45">
												<P align="center">3</P>
											</TD>
											<TD width="96">
												<P align="center">2%/5%/10%</P>
											</TD>
