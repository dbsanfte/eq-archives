{<br>
    DeleteLocalInt (oObject, &quot;SW_CLOSE_PENDING&quot;) ;<br>
    if (GetIsOpen (oObject))<br>
    {<br>
        AssignCommand (oObject, ActionCloseDoor (oObject));<br>
    }<br>
    if (GetLockLockable (oObject) &amp;&amp; !GetLocked (oObject))<br>
    {<br>
        SetLocked (oObject, TRUE);<br>
    }<br>
}<br>
<br>
void main()<br>
{<br>
    if (GetLocalInt (OBJECT_SELF, &quot;SW_CLOSE_PENDING&quot;)  == 0)<br>
    {<br>
        SetLocalInt (OBJECT_SELF, &quot;SW_CLOSE_PENDING&quot;, 1);<br>
        object oObject = OBJECT_SELF;<br>
        AssignCommand (GetModule (), DelayCommand (10.f, CloseDaDoor (oObject)));<br>
    }<br>
