<br>
object oNPC = OBJECT_SELF;<br>
ActionUnequipItem(oToDestroy);          // Take of old armor<br>
ActionDoCommand(AssignCommand(oNPC, DestroyObject(oToDestroy)));    // Destroy old armor<br>
ActionDoCommand(AssignCommand(oNPC, CreateItemOnObject(sArmor+sSeries, oNPC, 1); ));    // Create new armor<br>
ActionEquipItem(oArmor, INVENTORY_SLOT_CHEST);      // Equip it<br>
