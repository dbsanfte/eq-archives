			function getChildNode(element,position)
			{
				var child = element.childNodes[position];
				if(child.nodeType==3)
					child = element.childNodes[position+1];
				return child;
			}
											function qsfocus()
											{
												var q = jQuery("#qsquery");
												if (q.val() == "Quick search")
												{
													q.val("");
													q.removeClass("default");
												}
											}
											
											function qsblur()
											{
												var q = jQuery("#qsquery");
												if (q.val() == "")
												{
													q.addClass("default");
													q.val("Quick search");
												}
											}

