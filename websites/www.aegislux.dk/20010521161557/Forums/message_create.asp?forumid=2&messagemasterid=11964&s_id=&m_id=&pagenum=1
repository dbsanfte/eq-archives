<script language="JavaScript">
function validate( someform )
{
  errormsg = "\nThe following errors were detected...\n";
  if ( someform.m_id.value == "" )
  {
  if ( someform.messageusername.value.length == 0 )
	{
	  errormsg += "\n -You forgot to state your name.";
	}
  }
  if ( someform.messagemasterid.value == 0 )
  {
  if ( someform.messagetopic.value.length == 0 )
	{
	  errormsg += "\n -You forgot to give the message a topic.";
	}
  }
  if ( someform.messagetext.value.length == 0 )
	{
	  errormsg += "\n -You forgot to write some message text.";
	}
  if ( errormsg == "\nThe following errors were detected...\n" )
  {
  }
  else
  {
      alert(errormsg);
	  return false;
  }	
}
</script>
