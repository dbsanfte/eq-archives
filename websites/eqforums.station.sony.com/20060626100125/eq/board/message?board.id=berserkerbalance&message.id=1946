	<td class="subjectbar" height="20" style="font-size: 8pt;padding-left:10px;" width="100%">
		Re: Class issues lists – Updated Version (Berserker)

	</td>
	
		<td class="subjectbar" align=right style="padding:0px;padding-right:10px;">












		<table cellpadding=0 cellspacing=0 border=0 id="io_bberserkerbalancem3284_table" 
		
			onClick="setId('3284');showLiMenu(this,'io_bberserkerbalancem3284','right',false);" 
			onDblClick="setId('3284');showLiMenu(this,'io_bberserkerbalancem3284','right',false);" 
			
