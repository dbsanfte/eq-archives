	<td class="subjectbar" height="20" style="font-size: 8pt;padding-left:10px;" width="100%">
		Re: Class issues lists – Updated Version (Wizard)

	</td>
	
		<td class="subjectbar" align=right style="padding:0px;padding-right:10px;">












		<table cellpadding=0 cellspacing=0 border=0 id="io_bwizardbalancem1957_table" 
		
			onClick="setId('1957');showLiMenu(this,'io_bwizardbalancem1957','right',false);" 
			onDblClick="setId('1957');showLiMenu(this,'io_bwizardbalancem1957','right',false);" 
			
		>
		<tr class=clickable>
			
				<td nowrap><a class=subjectbar_text style='font-size: 8pt;'>Options</a></td>
				
			<td>&nbsp;&nbsp;</td>
			<td><img src='/i/skins/default/button_options.gif' border=0 alt='Options' title='Options' width=11 height=28></td>
			<td>&nbsp;</td></tr>
		</table>
		
		</td></tr>
		
	<tr>
	
		<td class="msg_user_cell" width="150" valign=top>
		
			 









<a href='/eq/view_profile?user.id=25491'  class="auth_text"  style="font-weight:bold;" >	
<img src='/i/rank_icons/moderator.gif' border=0 alt=''> <span style='color:#FF0000;font-weight:bold; '>Ashlanne</span></a>
			<br>
			
