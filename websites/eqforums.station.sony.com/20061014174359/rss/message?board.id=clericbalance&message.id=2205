      <pubDate>Fri, 23 Jul 2004 23:34:05 GMT</pubDate>
      <author>Kytherea</author>
      <guid>http://eqforums.station.sony.com/eq/board/message?board.id=clericbalance&amp;message.id=3301#M3301</guid>
      <dc:creator>Kytherea</dc:creator>
