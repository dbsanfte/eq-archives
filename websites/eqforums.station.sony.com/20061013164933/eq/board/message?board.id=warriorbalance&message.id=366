	<td class="subjectbar" height="20" style="font-size: 8pt;padding-left:10px;" width="100%">
		Re: Removing Defensive/Evasive from the game

	</td>
	
		<td class="subjectbar" align=right style="padding:0px;padding-right:10px;">












		<table cellpadding=0 cellspacing=0 border=0 id="io_bwarriorbalancem387_table" 
		
			onClick="setId('387');showLiMenu(this,'io_bwarriorbalancem387','right',false);" 
			onDblClick="setId('387');showLiMenu(this,'io_bwarriorbalancem387','right',false);" 
			
