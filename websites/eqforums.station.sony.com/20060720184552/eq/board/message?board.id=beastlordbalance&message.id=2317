		<table cellpadding=0 cellspacing=0 border=0 id="io_bbeastlordbalancem2326_table" 
		
			onClick="setId('2326');showLiMenu(this,'io_bbeastlordbalancem2326','right',false);" 
			onDblClick="setId('2326');showLiMenu(this,'io_bbeastlordbalancem2326','right',false);" 
			
