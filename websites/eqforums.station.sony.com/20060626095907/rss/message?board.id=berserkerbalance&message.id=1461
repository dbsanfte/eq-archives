      <author>Ashlanne</author>
      <guid>http://eqforums.station.sony.com/eq/board/message?board.id=berserkerbalance&amp;message.id=3269#M3269</guid>
      <dc:creator>Ashlanne</dc:creator>
      <dc:date>2005-06-04T00:12:04Z</dc:date>
