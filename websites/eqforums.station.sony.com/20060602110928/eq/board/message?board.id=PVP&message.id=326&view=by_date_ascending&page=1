	<td class="subjectbar" height="20" style="font-size: 8pt;padding-left:10px;" width="100%">
		Re: How to Fix EQ PvP - Address the real issue

	</td>
	
		<td class="subjectbar" align=right style="padding:0px;padding-right:10px;">












		<table cellpadding=0 cellspacing=0 border=0 id="io_bpvpm342_table" 
		
			onClick="setId('342');showLiMenu(this,'io_bpvpm342','right',false);" 
			onDblClick="setId('342');showLiMenu(this,'io_bpvpm342','right',false);" 
			
