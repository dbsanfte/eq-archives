	<td bgcolor="#050A0E" width=1><img src="/i/p.gif" height=1 width=1 border=0 alt=""><br></td>
	<td class="subjectbar" height="20" style="font-size: 8pt;padding-left:10px;" width="100%">
		Yet Another Fundamental Flaw of the Mage

	</td>
	
		<td class="subjectbar" align=right style="padding:0px;padding-right:10px;">












		<table cellpadding=0 cellspacing=0 border=0 id="io_bmagicianbalancem907_table" 
		
			onClick="setId('907');showLiMenu(this,'io_bmagicianbalancem907','right',false);" 
			onDblClick="setId('907');showLiMenu(this,'io_bmagicianbalancem907','right',false);" 
			
		>
		<tr class=clickable>
			
				<td nowrap><a class=subjectbar_text style='font-size: 8pt;'>Options</a></td>
				
			<td>&nbsp;&nbsp;</td>
