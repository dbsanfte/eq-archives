							function gn2_clearsearch(){
								with (document.gn2_search.p_search_text){
									if (value=="Search Knowledge Base"){
										value="";
									}
								}
							}
							
							function gn2_resetsearch(){
								with (document.gn2_search.p_search_text){
									if (value==""){
										value="Search Knowledge Base";
									}
								}
							}

