									<td bgcolor="#0C142B" width=1><img src="/i/p.gif" height=1 width=1 border=0 alt=""><br></td>
			<td class="subjectbar"  style="font-size: 10pt;padding-left:10px;" width="100%">
									The Definitions of a Bard
																	</td>
							<td class="subjectbar" align=right style="padding:0px;padding-right:10px;">		
		<table cellpadding=0 cellspacing=0 border=0 
		id="individual_options_1321_table" 
		onClick="setId('1321');show(this,'individual_options_1321','right',false);" 
		onDblClick="setId('1321');show(this,'individual_options_1321','right',false);" 
	 >
	<tr class=clickable>
					<td nowrap><a class=subjectbar style='font-size: 8pt;'>Options</a></td>
				<td>&nbsp;&nbsp;</td>
		<td><img src='/i/skins/default/button_options.gif' border=0 alt='' width=11 height=28></td>
		<td>&nbsp;</td></tr>
	</table>
	
	
</td></tr>
						
		<tr>
			
			<td class="msg_user_cell" width="150" valign=top>

						
							
				
								
				<a href='/eq/view_profile?user.id=17951' class="auth_text" style="font-weight:bold;"><span style='color:#CC6600;'>FeroceFV</span></a>
				<br>

								
