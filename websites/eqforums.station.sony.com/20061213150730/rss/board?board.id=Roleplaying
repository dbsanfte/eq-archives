      <pubDate>Tue, 10 Oct 2006 02:53:50 GMT</pubDate>
      <author>Thaoal</author>
      <guid>http://eqforums.station.sony.com/eq/board/message?board.id=Roleplaying&amp;message.id=12461#M12461</guid>
      <dc:creator>Thaoal</dc:creator>
