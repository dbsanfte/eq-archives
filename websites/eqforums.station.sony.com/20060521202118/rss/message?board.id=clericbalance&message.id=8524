      <pubDate>Mon, 22 Aug 2005 13:00:05 GMT</pubDate>
      <author>Maebe</author>
      <guid>http://eqforums.station.sony.com/eq/board/message?board.id=clericbalance&amp;message.id=9122#M9122</guid>
      <dc:creator>Maebe</dc:creator>
      <dc:date>2005-08-22T13:00:05Z</dc:date>
    </item>
