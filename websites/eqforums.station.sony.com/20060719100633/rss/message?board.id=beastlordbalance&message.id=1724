      <author>Ashlanne</author>
      <guid>http://eqforums.station.sony.com/eq/board/message?board.id=beastlordbalance&amp;message.id=2468#M2468</guid>
      <dc:creator>Ashlanne</dc:creator>
      <dc:date>2005-04-02T01:52:44Z</dc:date>
