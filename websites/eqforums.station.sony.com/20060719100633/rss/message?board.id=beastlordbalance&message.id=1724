      <author>Ashlanne</author>
      <guid>http://eqforums.station.sony.com/eq/board/message?board.id=beastlordbalance&amp;message.id=2257#M2257</guid>
      <dc:creator>Ashlanne</dc:creator>
      <dc:date>2005-02-08T02:05:22Z</dc:date>
