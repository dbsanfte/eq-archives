<SCRIPT language="JavaScript">
function checkdata(){
 var re_email = /^([_a-zA-Z0-9-]+)(\.[_a-zA-Z0-9-]+)*@[a-zA-Z0-9-]+\.([a-zA-Z]{2,3})$/;
 var empfemail = document.sendform.empfemail.value;
 var absemail = document.sendform.absemail.value;
 var empfname = document.sendform.empfname.value;
 var absname = document.sendform.absname.value;
 var txt = document.sendform.txt.value;
 var titel = document.sendform.titel.value;
 var checked = true;
 if (absname.length<3) {
    alert("The length of the name of the sender must be at least 3.");
    checked = false;    
    }
 if (empfname.length<3) {
    alert("The length of the name of the receiver must be at least 3.");
    checked = false;    
    }
 if (titel.length<2) {
    alert("The length of the titel must be at least 2.");
    checked = false;    
    }
 if (txt.length<5) {
    alert("The length of the text must be at least 5.");
    checked = false;    
    }
  if ((re_email.test(empfemail))==false || empfemail.length==0) {
    alert("The adress of the receiver is wrong!");
    checked = false;
    }
  if ((re_email.test(absemail))==false || absemail.length==0) {
    alert("The adress of the sender is wrong!");
    checked = false;
    }

 if (checked) {
   //document.sendform.method = "post";
   document.sendform.action = "vorschau.php";
   document.sendform.target = "main";
   document.sendform.submit();
 }
 return checked;
}
</SCRIPT>
