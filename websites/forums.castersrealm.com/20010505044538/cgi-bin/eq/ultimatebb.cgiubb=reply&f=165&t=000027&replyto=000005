function DoSmilie(addSmilie) {
	var revisedMessage;
	var currentMessage = document.REPLIER.message.value;
	revisedMessage = currentMessage+addSmilie;
	document.REPLIER.message.value=revisedMessage;
	document.REPLIER.message.focus();
