        function color1(from) {
                strSelection = document.selection.createRange().text
                if (strSelection == "") {
                        document.newtopic.message.focus()
                        strSelection = prompt("Enter the text you want to add color","")
                        if (strSelection == null) return;
                                document.selection.createRange().text = "[color=#000000]" + strSelection + "[/color]"
                }
                else document.selection.createRange().text = "[color=#000000]" + strSelection + "[/color]"
                return;
        }
