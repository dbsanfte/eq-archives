<script language=javascript>
function InsertCode( strCode )
{
	document.PostTopic.txtArea.value += strCode + " "
	document.PostTopic.txtArea.focus()
}

function sizeTEXT()
{
	var isIE = (document.all) ? true:false;

	if ( isIE )
	{
		var scrnX = document.body.clientWidth;
		var scrnY = document.body.clientHeight;

		document.all['txtArea'].cols = (scrnX / 12);
		document.all['txtArea'].rows = (scrnY / 40);
	}
}
</script>
