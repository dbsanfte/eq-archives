		function submitPoll(btnPressed) {
			btnPressed.disabled=true;
		if (btnPressed.name == "results") {
			document.Poll.Method_Type.value = "guest_vote";
		} else {
			document.Poll.Method_Type.value = "member_vote";
		}
			document.Poll.submit();
		}
