<?
$x=0;

$sSQL = "SELECT Item.ItemID, REPLACE(Item.ItemName, \" s \", \"'s \") AS ItemName, REPLACE(Item.ItemLocation, \" s \", \"'s \") AS ItemLocation, ItemOwner.MainCharacterID, DATE_FORMAT(Raid.Date, '%M %e, %Y') AS Date, ItemOwner.RaidID from ItemOwner, Raid, Item WHERE ItemOwner.RaidID=Raid.RaidID AND ItemOwner.ItemID=Item.ItemID AND Item.ItemID=".$_GET["ID"]." ORDER BY Raid.Date DESC";
$whoItems = mysql_query($sSQL)  or die(mysql_error());

?><center><TABLE border="0" valign="top" border=0 cellpadding=2 bordercolor="#FFFFFF" width="30%" >
<tr>
		<td align=center colspan=2 bgcolor="#BCBFCB"><font face="Verdana" size="2">Owners of <b><?echo stripslashes($_GET["itemName"])?> <a href="http://lucy.fnord.net/itemlist.html?searchtext=<? echo strtr($_GET["itemName"],"'", "")?>"><img src="/images/info.gif" border=0></a></font></b></td>
</tr>
    <td align=center colspan=2 bgcolor="#BCBFCB"><? echo mysql_num_rows($whoItems) ?> have been looted </td></tr>
<?

        while ($rsRecentItems = mysql_fetch_array($whoItems)) {
    $x++;
    $bgcolorkey=$x%2;
    if ($rsRecentItems["RaidID"] !=0) {
        $strDate = "<a href='raid.php?encounter=".$rsRecentItems["RaidID"]."&date=".$rsRecentItems["Date"]."'>".$rsRecentItems["Date"];
    } else {
        $strDate = "No date available";
    }
?>
<font size="2"> 
  <tr bgcolor=<? echo $bgcolor[$bgcolorkey]?> >
        <td><a href="character.php?name=<? echo $rsRecentItems["MainCharacterID"]?>"><? echo $rsRecentItems["MainCharacterID"]?></a></td>
        
        <td><? echo $strDate ?></td>
	</tr>
    <?}?>
