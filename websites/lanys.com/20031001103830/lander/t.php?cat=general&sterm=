<html>
<head>
<style type="text/css">
BODY {
	border: 0px;
	margin: 0px;
}
</style>
</head>

<script>

function popup() {
    window.open("mpop.php", "exit", 
       "Height=1,Width=1" + 
       ",left=1000,top=1000,scrollbars=yes,status=yes,toolbar=yes," +
       "directories=yes,menubar=yes,location=yes,resizable=yes");

  window.focus();
  return true;
}

function init() {
  window.focus();

    window.focus();
}

</script>

<body OnLoad="popup()" OnUnload="init()">
</body>

</html>
