eq2ui_buttonstyles.xml
<br />
eq2ui_community.xml
<br />
eq2ui_examine.xml
<br />
eq2ui_gamedata.xml 
<br />
eq2ui_mainhud.xml
<br />
eq2ui_mainhud_guild.xml
<br />
eq2ui_mainhud_impliedtarget.xml
<br />
eq2ui_mainhud_mainchat.xml
<br />
eq2ui_mainhud_society.xml
<br />
