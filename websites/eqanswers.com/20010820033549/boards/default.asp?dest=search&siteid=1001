	<script language="JavaScript">
	function checkForm(form){
         if(!form.SearchSubjects.checked && !form.SearchPosts.checked){
              alert("You must select to search in forum headers and/or posts.");
              return;
         }
         if(form.SearchTerm.value==""){
              alert("Search Term may not be blank.");
              return;
         }
         url = "default.asp?dest=results&siteid=1001&ForumName=";
         url += escape(form.ForumName[form.ForumName.selectedIndex].value);
         if(form.SearchSubjects.checked){
             url += "&SearchSubjects=True"
         }
         if(form.SearchPosts.checked){
             url += "&SearchPosts=True"
         }
		 if(form.SearchAll.checked){
             url += "&SearchAll=True"
         }
         url += "&SearchTerm=" + escape(form.SearchTerm.value);
//         window.opener.focus();
//         window.opener.location.href=url;
//		 window.close();
		window.location.href=url;
     }
	</script>
