	<td width="25%" valign="top" align="left"><font face="verdana" size="2">Player's Name:</font></td>
	<td width="75%" valign="top" align="left"><font face="verdana" size="2">LDH Teeny&nbsp;</font></td>
	</tr>
	<td width="25%" valign="top" align="left"><font face="verdana" size="2">Player's Email:</font></td>
	<td width="75%" valign="top" align="left"><font face="verdana" size="2"><a href="mailto:ldhteeny@darkhunters.com">ldhteeny@darkhunters.com&nbsp;</a></font>&nbsp;</td>
