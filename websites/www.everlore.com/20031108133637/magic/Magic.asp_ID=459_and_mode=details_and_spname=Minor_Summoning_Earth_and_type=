							<font face="verdana" size="2">
							Level:<br>
							Rank:<br>
							Target Type:<br>
							Skill:<br>
							Mana:<br>
							Casting Time:<br>
							Recast Time:<br>
							Duration:<br>
							</font>
							</td>
							<td width="50%">
							<font face="verdana" size="2">
							16<br>
							5<br>
							Self<br>
							Conjuration<br>
							160<br>
							9<br>
							<br>
							<br>
							</font>
							</td>
