var session_cookie = getCookie('session2451995.0048');
if (session_cookie == null) {
	var session_dt = "0";
	var session_j = "0";
}  else {
	var session_array = session_cookie.split("&");
	var session_dt = session_array[0];
	var session_j = session_array[1];
