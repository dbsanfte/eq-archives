	<table cellpadding="0" cellspacing="0" border="0" width="100%">
	<tr>
		
		<td class="smallfont"><b></b></td>
		<td class="smallfont" align="right" wrap="nowrap">Post #<b><a href="showpost.php?s=4a2ac2372b8674f581f60c26550a8c38&amp;postid=274254&postcount=21" target="new">21</a></b></td>
