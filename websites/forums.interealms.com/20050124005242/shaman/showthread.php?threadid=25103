	<td class="tcat" colspan="2"><img src="images/clear.gif" alt="" width="1" height="1" /></td>
</tr><tr title="Post 312557">
	<td class="thead" width="175" align="center">
	
	<!-- 1 -->
	<table cellpadding="0" cellspacing="0" border="0">
	<tr>
		<td><img src="images/posticon.gif" alt="folder icon" title="Old Post" border="0" /></td>
		<td class="smallfont"><a name="post312557">&nbsp;</a> 11-30-2004, 08:44 PM </td>
	</tr>
	</table>
	<!-- /1 -->
	
	</td>
	<td class="thead">
	
	<!-- 2 -->
	<table cellpadding="0" cellspacing="0" border="0" width="100%">
	<tr>
		
		<td class="smallfont"><b></b></td>
		<td class="smallfont" align="right" wrap="nowrap">Post #<b><a href="showpost.php?s=7ad5b82dd6bb808099c1cbbff422852e&amp;postid=312557&postcount=11" target="new">11</a></b></td>
	</tr>
