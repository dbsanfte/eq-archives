	<!-- 2 -->
	<table cellpadding="0" cellspacing="0" border="0" width="100%">
	<tr>
		
		<td class="smallfont"><b>Chapter 24.</b></td>
		<td class="smallfont" align="right" wrap="nowrap">Post #<b><a href="showpost.php?s=150f90c73d3c04d5ccf51dbd923c7098&amp;postid=9018&postcount=24" target="new">24</a></b></td>
	</tr>
