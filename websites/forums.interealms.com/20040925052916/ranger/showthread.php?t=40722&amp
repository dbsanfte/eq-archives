	<div align="center">
		<div class="page" style="width:100%; text-align:left">
			<div style="padding:0px 25px 0px 25px">
<div style="padding:0px 0px 2px 0px">

<table class="tborder" cellpadding="2" cellspacing="0" border="0" width="100%" align="center">
<tr>
	
		<td class="thead" style="font-weight:normal" >		
			<!-- status icon and date -->
			<a name="post617552"><img class="inlineimg" src="images/statusicon/post_old.gif" alt="Old" border="0" /></a>
			09-21-2004, 10:02 PM
			
			<!-- / status icon and date -->				
		</td>
