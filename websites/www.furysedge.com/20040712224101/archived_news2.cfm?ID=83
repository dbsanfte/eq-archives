  <td class="tblhead" width="520" height="20">
   <!-- Start News Title -->Shibby! Two Down in One Night! &nbsp;&nbsp;&nbsp; -update by Daggen<!-- End News Title -->
  </td>
  <td class="tblhead" width="60" height="20">
  <!-- Start News Date -->
  04/30/2003
  <!-- End News Date -->
 </td>
