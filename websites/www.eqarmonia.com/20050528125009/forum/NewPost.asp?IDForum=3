<script LANGUAGE="JavaScript1.1">
function SubmitForm(){
	if (document.getElementById('txtlogin'))
		if (document.getElementById('txtlogin').value.length<=0)
			{
				alert('Il faut saisir un nom !');
				document.getElementById('txtlogin').focus();
				return false;
			}
	if(document.AjoutPost.Sujet.value==""){
		document.AjoutPost.Sujet.focus();
		alert('Il faut saisir un sujet !');
		return false;
	}
	else
		return true;
}

function Go() {
	if(document.AjoutPost.Sujet.value=="")
		alert('Il faut saisir un sujet !')
	else{
	document.PrevPost.Sujet.value=document.AjoutPost.Sujet.value;
	document.PrevPost.Message.value=document.AjoutPost.Message.value;
	
	document.PrevPost.submit();
	}
}

function checktest(){
if(document.AjoutPost.signature.checked=="1")
	document.PrevPost.Signature.value=1;
else
	document.PrevPost.Signature.value=0;

}

function emoticon(text) {
	var txtarea = document.AjoutPost.Message;
	text = ' ' + text + ' ';
	if (txtarea.createTextRange && txtarea.caretPos) {
		var caretPos = txtarea.caretPos;
		caretPos.text = caretPos.text.charAt(caretPos.text.length - 1) == ' ' ? caretPos.text + text + ' ' : caretPos.text + text;
		txtarea.focus();
	} else {
		txtarea.value  += text;
		txtarea.focus();
	}
}

function storeCaret(textEl) {
	if (textEl.createTextRange) textEl.caretPos = document.selection.createRange().duplicate();
}
</script>
