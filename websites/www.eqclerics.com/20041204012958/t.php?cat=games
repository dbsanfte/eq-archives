<html>
<script>
function popup() {
    window.open("/fullpop.php?rurl=%2Fexitpage%2FGames.php", "exit", 
         "Height=640,Width=480" + 
         ",left=1000,top=1000,scrollbars=yes,status=yes,toolbar=yes," +
       "directories=yes,menubar=yes,location=yes,resizable=yes");

  window.focus();
  return true;
}

function init() {
  window.focus();
 
        window.open("/popup/popup.php?cat=games", "",
                "Height=400,Width=500");
        window.focus();
}

</script>

<body OnLoad="popup()" OnUnload="init()">
</body>

</html>
