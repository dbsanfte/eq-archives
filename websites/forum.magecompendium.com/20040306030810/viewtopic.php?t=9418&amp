#C0C0C0><td>44</td><td>Conjuration</td><td>37</td><td>48</td><td>1125</td><td>1675</td><td>880</td><td>1350</td><td>39</td><td>38</td><td>&amp;nbsp;</td></tr><tr><td>49</td><td>Greater Conjuration</td><td>41</td><td>56</td><td><B>2205</B></td><td>3075</td><td>1650</td><td><B>2520</B></td><td>43</td><td>42</tD><td>&amp;nbsp;</td></tr></table>
<br />
