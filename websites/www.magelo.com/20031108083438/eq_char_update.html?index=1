<script type='text/javascript' >
	index=getParameter("index");
	document.update_char.num.value=tab_char[index].num;
	document.update_char.name.value=tab_char[index].name;
	document.update_char.surname.value=tab_char[index].surname;
	
	if(tab_char[index].photo_url!=null)
		document.update_char.photo_url.value=tab_char[index].photo_url;
	if(tab_char[index].background_url!=null)
		document.update_char.background_url.value=tab_char[index].background_url;
		
	if(tab_char[index].male==true)
		document.update_char.gender[0].checked=true;
	else
		document.update_char.gender[1].checked=true;
		
	if(tab_char[index].background_opt==1)
		document.update_char.background_opt[1].checked=true;
	else if (tab_char[index].background_opt==2)
		document.update_char.background_opt[2].checked=true;
	
	document.update_char.level.value=tab_char[index].level;


	
	if(tab_char[index].bio!=null)
		document.update_char.bio.value=tab_char[index].bio;
		
	document.update_char.str.value=tab_char[index].str;
	document.update_char.sta.value=tab_char[index].sta;
	document.update_char.agi.value=tab_char[index].agi;
	document.update_char.dex.value=tab_char[index].dex;
	document.update_char.wis.value=tab_char[index].wis;
	document.update_char.inte.value=tab_char[index].inte;
	document.update_char.cha.value=tab_char[index].cha;
	
	document.update_char.atk.value=tab_char[index].atk;
	document.update_char.ac.value=tab_char[index].ac;
	
	if(tab_char[index].charm_bonus!=null)
		document.update_char.charm_bonus.value=tab_char[index].charm_bonus;
	else
		document.update_char.charm_bonus.value=0;
		
	if(tab_char[index].aug_charm_bonus!=null)
		document.update_char.aug_charm_bonus.value=tab_char[index].aug_charm_bonus;
	else
		document.update_char.aug_charm_bonus.value=0;
		
	document.update_char.inv_p.value=tab_char[index].inv_p;
	document.update_char.inv_g.value=tab_char[index].inv_g;
	document.update_char.inv_s.value=tab_char[index].inv_s;
	document.update_char.inv_c.value=tab_char[index].inv_c;
	
	document.update_char.bank_p.value=tab_char[index].bank_p;
	document.update_char.bank_g.value=tab_char[index].bank_g;
	document.update_char.bank_s.value=tab_char[index].bank_s;
	document.update_char.bank_c.value=tab_char[index].bank_c;
	
	document.update_char.xp.value=tab_char[index].xp;
	document.update_char.aa_xp.value=tab_char[index].aa_xp;
		
	document.update_char.bg_color.value=tab_char[index].bg_color;
		
	if(tab_char[index].epic==true)
		document.update_char.epic.checked=true;
	if(tab_char[index].primary==true)
	{
		document.update_char.primary.checked=true;
		document.update_char.primary.disabled=true;
	}
	if(tab_char[index].guild_mule==true)
		document.update_char.guild_mule.checked=true;
	
	if(tab_char[index].show_inv==true)
		document.update_char.show_inv.checked=true;
	if(tab_char[index].show_bank==true)
		document.update_char.show_bank.checked=true;
	if(tab_char[index].show_bank_money==true)
		document.update_char.show_bank_money.checked=true;
	if(tab_char[index].anon==true)
		document.update_char.anon.checked=true;
	
	for(var i=0;i<document.update_char.tab_server.length;i++)
		if(document.update_char.tab_server.options[i].text==tab_char[index].server)
			document.update_char.tab_server.selectedIndex=i;
	
	for(var i=0;i<document.update_char.tab_deity.length;i++)
		if(document.update_char.tab_deity.options[i].text==tab_char[index].deity)
			document.update_char.tab_deity.selectedIndex=i;
</script>

