<script type='text/javascript' >
	function updateLink(index)
	{
		if(index!=0)
		{
			var tmp=""+tab_item[index+1].num;
			var id=tmp.substring(0,(tmp.length-1));
			document.getElementById("link").innerHTML="<a href='eq_item_info.html?num="+id+"'><img alt='View item info' border=0 src='/img/eye.gif'><\/a>";
		}
		else
			document.getElementById("link").innerHTML="";
	}
</script>

