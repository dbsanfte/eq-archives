				document.write("pointer");
			document.write("' border=0 src='"+tab_item[i].icon+"'  onmousedown='show_item("+i+");' onmouseup='show_item(0);' onmouseout='show_item(0);'>");
		}
		document.write("<\/div>");	
	}
