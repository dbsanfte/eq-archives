<script type="text/javascript">
	document.getElementById("alpha").style.top  = '90';
	document.getElementById("alpha").style.left = '60';
	document.getElementById("alpha-magelo").style.top  = '340';
	document.getElementById("alpha-magelo").style.left = '415';
	document.getElementById("alpha-bag").style.top  = '90';
	document.getElementById("alpha-bag").style.left = '415';
	if(ie_win32==true)
	{
		document.getElementById("alpha-trans").style.top  = '90';
		document.getElementById("alpha-trans").style.left = '60';
		document.getElementById("alpha-magelo-trans").style.top  = '340';
		document.getElementById("alpha-magelo-trans").style.left = '415';
		document.getElementById("alpha-bag-trans").style.top  = '90';
		document.getElementById("alpha-bag-trans").style.left = '415';
	}
	
	
	setAlphaChannel("alpha");
	setAlphaChannel("alpha-magelo");
	setAlphaChannel("alpha-bag");
	
	// affichage des valeurs dans les emplacements prévus
	document.getElementById("RP").style.color=getColor(pr_bonus);
	document.getElementById("RP").appendChild(document.createTextNode(pr));
	document.getElementById("RM").style.color=getColor(mr_bonus);
	document.getElementById("RM").appendChild(document.createTextNode(mr));
	document.getElementById("RD").style.color=getColor(dr_bonus);
	document.getElementById("RD").appendChild(document.createTextNode(dr));
	document.getElementById("RF").style.color=getColor(fr_bonus);
	document.getElementById("RF").appendChild(document.createTextNode(fr));
