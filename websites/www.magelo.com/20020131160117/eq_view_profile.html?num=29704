<script type="text/javascript">
	var cursor="pointer";
	if(ie==true)
		cursor="hand";
	for(var i=1;i<=8;i++)
	{
		document.write("<div id='slot-inv-"+i+"' class='slot'>");
		var index_inv = 21+i;
		var index = 21+i*10;
		
		if(tab_item[index_inv]!=null)
			document.write("<img style='cursor: "+cursor+"' border=0 align='' src='"+tab_item[index_inv].icon+"'  onmousedown='show_item("+index_inv+");' onmouseup='show_item(0);' onmouseout='show_item(0);'>");
		else if(tab_item[index]!=null)	
			document.write("<img style='cursor: "+cursor+"' border=0 alt='' src='"+tab_item[index].icon+"' onclick='open_bag("+index+");'>");
		else
			document.write("<img style='cursor: "+cursor+"' border=0 alt='' src='"+repository+"/misc/money_mask.png'>");
		document.write("<\/div>");
	}
</script>

