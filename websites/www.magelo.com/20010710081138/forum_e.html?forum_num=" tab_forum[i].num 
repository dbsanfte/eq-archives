<tr><td>
<script>
for(var i=1;i<=tab_message.length;i++)
{
	if(tab_message[i].level==0)
	{
		document.write("<br>");
		if(tab_message[i].locked==true)
			document.write("<img src='./img/locked_folder.gif' height=16 width=13 title='Locked topic'>");
		else
		{
			if(tab_message[i].new_one==true)
			{
				if(tab_message[i].replies>25)
					document.write("<img src='./img/hot_red_folder.gif' height=16 width=13 title='Active new topic'>");
				else
					document.write("<img src='./img/red_folder.gif' height=16 width=13 title='New topic'>");
			}
			else
			{
				if(tab_message[i].replies>25)
					document.write("<img src='./img/hot_folder.gif' height=16 width=13 title='Active topic'>");
				else
					document.write("<img src='./img/folder.gif' height=16 width=13 title='Topic'>");
			}
		}
	}
	if(tab_message[i].level==0)
		document.write("<img src='./img/dot.gif' height=1 width="+tab_message[i].level*20+">");
	else
		document.write("<img src='./img/dot.gif' height=1 width="+(13+tab_message[i].level*20)+">");
	if(flat==true)
		document.write("<a href='./forum_flat.html?mess_num="+tab_message[i].num+"'>");
	else
		document.write("<a href='./forum_read.html?mess_num="+tab_message[i].num+"'>");
	document.write(tab_message[i].title+"</a> <b>-</b> <span class='author'>"+tab_message[i].author+"</span> <span class='date'>"+tab_message[i].date+"</span><br>");
}
</script>
</td></tr>
