	<input type='hidden' name='url' value='/guilds/guilddetail.php?id=412'>
	<input type='text' name='username' size='10' onKeyPress='checkEnter(event)'>
	<input type='password' name='password' size='10' onKeyPress='checkEnter(event)'>&nbsp;&raquo;&nbsp;<a href='javascript:void(document.loginform.submit())'>Login</a>
	 | <a href='/forums/register.php?action=signup'>register?</a>&nbsp;&nbsp;
