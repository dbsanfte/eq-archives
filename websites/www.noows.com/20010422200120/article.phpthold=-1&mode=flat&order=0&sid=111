function init() {

var img;
var x, y;
img = getImage("placeholder");
x = getImagePageLeft(img);
y = getImagePageTop(img);
myScroller1.create();
myScroller1.hide();
myScroller1.moveTo(x, y);
myScroller1.setzIndex(100);
myScroller1.show();

}
