<li class="postbitlegacy postbitim postcontainer" id="post_1849730">
<!-- see bottom of postbit.css for .userinfo .popupmenu styles -->

	<div class="posthead">
		<label for="post_imod_checkbox_1849730">
		<span class="postdate old">
		
		<span class="date">March 13th, 2016&nbsp;<span class="time">05:52 PM</span></span>
		
		</span>
		</label>
		<span class="nodecontrols">
		
			<a name="post1849730" href="showthread.php?78541-Chinese-Economic-Nationalism&amp;s=2f1c020babc86faf2681e53c14599bb3&amp;p=1849730&amp;viewfull=1#post1849730" class="postcounter">#4</a>
		
		
		</span>
	</div>
	<div class="postdetails">
		<div class="userinfo">
			<div class="username_container">
			
				<div class="popupmenu memberaction">
	<a class="username offline popupctrl" href="member.php?158-Istari&amp;s=2f1c020babc86faf2681e53c14599bb3" title="Istari is offline"><strong>Istari</strong></a>
