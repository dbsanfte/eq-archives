	<script>
	function addnewscomm(a)
	{
	window.open('./site/addcommentairenews.php?code='+a,'ajoutdecommentaire', 'width=600,height=600,toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=no');
	}
	function voirnewscomm(b)
	{
	window.open('./site/voircomnews.php?code='+b,'Commentaire', 'width=630,height=600,toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=no');
	}
	
