global $myguild, $city_cloak_on, $city_cloak_off, $city_last_attack, $city_last_cloaker, $city_cloak_time, $city_cloak_countdown;
<br />

<br />

<br />
if&#40;empty&#40;$city_tag&#41;&#41;
<br />
&#123;
<br />
&nbsp; &nbsp; &nbsp; &nbsp; $city_tag = array&#40;
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &quot;What did you expect?&quot;,
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &quot;Just when you thought it was safe to log into AO&quot;,
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &quot;Prepare to be probed....&quot;,
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &quot;I declare open hunting season on aliens!!&quot;,
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &quot;Help Rubi-Ka put Aliens on the endangered list&quot;,
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &quot;Alien, the other white meat&quot;,
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &quot;Resistance is everything&quot;,
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &quot;Yarrrr.. here there be.... Aliens???? Wtf!!!&quot;&#41;;
<br />
&#125;
<br />

<br />

<br />

<br />
if &#40;!$city_cloak_time&#41;
<br />
&#123;
<br />
&nbsp; &nbsp; &nbsp; &nbsp; $reply = $botcolor.&quot;Im sorry, but i dont seem to have witnessed any changes in status since my last restart&quot;;
<br />
&nbsp; &nbsp; &nbsp; &nbsp; //$aoc-&gt;send_group&#40;$myguild, $botcolor.&quot;Im sorry, but i dont seem to have witnessed any changes in status since my last restart&quot;&#41;;
<br />
&#125;
<br />
else
<br />
&#123;
<br />
&nbsp; &nbsp; &nbsp; &nbsp; if &#40;$city_cloak_off == 1&#41;
<br />
&nbsp; &nbsp; &nbsp; &nbsp; &#123;
<br />
