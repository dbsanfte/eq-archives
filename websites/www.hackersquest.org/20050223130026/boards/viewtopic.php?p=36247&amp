<br />
&nbsp; &nbsp; &nbsp; &nbsp; $temptime2 = date&#40;&quot;H&#58;i&#58;s D dS M&quot;,$city_last_attack-date&#40;&quot;Z&quot;&#41;&#41; . &quot; &#40;GMT&#41;&quot;;
<br />

<br />
&nbsp; &nbsp; &nbsp; &nbsp; $rdmseed = rand&#40;0,count&#40;$city_tag&#41;-1&#41;;
<br />
&nbsp; &nbsp; &nbsp; &nbsp; $rdmtag = $city_tag&#91;$rdmseed&#93;;
<br />

<br />
&nbsp; &nbsp; &nbsp; &nbsp; //$aoc-&gt;send_group&#40;$myguild, $botcolor.&quot;Cloaking is currently $mystatus , Last changed by $city_last_cloaker at $temptime.\n&#58;&#58; Last alien attack was at $temptime2&quot;&#41;;
