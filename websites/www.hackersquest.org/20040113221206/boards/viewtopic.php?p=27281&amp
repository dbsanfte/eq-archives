<br />
&nbsp; &nbsp;
<br />
&nbsp; &nbsp;echo &quot;&#91;$charName&#93;&#58; $msg\n&quot;;
<br />
&nbsp; &nbsp;
<br />
&nbsp; &nbsp;if&#40;substr&#40;$msg, -1&#41; == chr&#40;92&#41;&#41; &#123; $msg = substr&#40;$msg, 0, -1&#41;; &#125;
<br />
&nbsp; &nbsp;$msg = str_replace&#40;&quot;&nbsp; &quot;, &quot; &quot;, trim&#40;$msg&#41;&#41;;
<br />
&nbsp; &nbsp;if&#40;$msg&#91;0&#93; == &quot;!&quot;&#41; &#123; $msg = substr&#40;$msg, 1&#41;; &#125;
<br />
&nbsp; &nbsp;$msg = str_replace&#40;chr&#40;17&#41;, &quot;&quot;, str_replace&#40;chr&#40;18&#41;, &quot;&quot;, $msg&#41;&#41;;
<br />
&nbsp; &nbsp;$words = explode&#40;&quot; &quot;, strtolower&#40;$msg&#41;&#41;;
<br />
&nbsp; &nbsp;
<br />

<br />

<br />
if&#40;$words&#91;0&#93; == &quot;ymera&quot;&#41;
<br />
&nbsp; &nbsp;&#123;
<br />
&nbsp; &nbsp;if&#40;$substance != 'name'&#41;&#123;
