$data&#91;1&#93; = date
<br />
$data&#91;2&#93; = level
<br />
$data&#91;3&#93; = faction
<br />
$data&#91;4&#93; = guild
<br />
$data&#91;5&#93; = guild rank</td>	</tr></table><span class="postbody">
