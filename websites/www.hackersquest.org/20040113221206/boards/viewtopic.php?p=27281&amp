&nbsp; &nbsp;$data = preg_grep&#40;'#^&lt;td&gt;200#', split&#40;&quot;\n&quot;, file_get_contents&#40;&quot;http&#58;//auno.org/ao/char.php?dimension=2&amp;name=$substance&quot;&#41;&#41;&#41;;
<br />
&nbsp; &nbsp;$themessage = $color&#91;&quot;white&quot;&#93; . &quot;Wtfnet&#58;&#58; &quot; . $color&#91;&quot;lgrey&quot;&#93; . &quot; &#58;&#58; &quot; . $color&#91;&quot;lblue&quot;&#93; . &quot;Ymera for $substance&quot; . $farve&#91;&quot;g&quot;&#93; . &quot; &#58;&#58; &quot; . $farve&#91;&quot;b&quot;&#93; . &quot;click here to read &quot; .chr&#40;18&#41;;
<br />
&nbsp; &nbsp;$ymera = $color&#91;&quot;lgrey&quot;&#93; . &quot;Auno.org &quot; . $color&#91;&quot;lblue&quot;&#93; . &quot;Ymera Results for&#58; &quot; . $color&#91;&quot;white&quot;&#93; . $substance . &quot;\n\n&quot;;
<br />
&nbsp; &nbsp;foreach &#40;$data as $line&#41;&#123;
<br />
&nbsp; &nbsp;$data = str_replace&#40;&quot;&lt;/td&gt;&quot;,&quot;&quot;,$line&#41;;
<br />
&nbsp; &nbsp;$data = str_replace&#40;&quot;&lt;/tr&gt;&quot;,&quot;&lt;td&gt;&quot;,$data&#41;;
<br />
&nbsp; &nbsp;$data = split&#40;&quot;&lt;td&gt;&quot;,$data&#41;;
<br />

<br />
&nbsp; &nbsp;$ymera .= $color&#91;&quot;lblue&quot;&#93;. $data&#91;1&#93; . &quot; &quot;.$color&#91;&quot;lgrey&quot;&#93;.$data&#91;2&#93; . &quot; &quot;.$color&#91;&quot;lblue&quot;&#93;. $data&#91;3&#93; . &quot; &quot; . $color&#91;&quot;purple&quot;&#93; . $data&#91;4&#93; . &quot;\n&quot;;&#125;&nbsp; &nbsp;
<br />
&nbsp; &nbsp;
<br />
&nbsp; &nbsp;$aoc-&gt;send_tell&#40;$charName, $themessage, MakeTextBlob&#40;$ymera&#41;&#41;;&#125; 
